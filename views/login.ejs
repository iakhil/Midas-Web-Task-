<div class="container mt-5">
<link rel="stylesheet" type="text/css" href="css/login.css">
  <h1 style="color: white;">Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email" style="color: white; font-size: 20px;">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password" style="color: white; font-size: 20px;">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <h2 style="text-align: center;">Or</h2>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a style="text-decoration: none;" class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            <h1> Sign In with Google </h1>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>